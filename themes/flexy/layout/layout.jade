doctype html
html(lang='en-us')
  head
    include _head
    include _mixins
  body(itemscope, itemtype='https://schema.org/WebPage', onmousemove="updateCoords(event)")
    header(itemscope, itemtype='https://schema.org/WPHeader')
      include _header
      canvas(id='canvas' class='space')
    main(itemscope, itemtype='https://schema.org/Blog')
      include _content
    include _scripts